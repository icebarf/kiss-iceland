#!/bin/sh -e

./configure 	--prefix=/usr \
        --without-lcms2 \
        --without-libsystemd \
		--without-gif \
		--without-rsvg \
        --without-xft \
        --without-xaw3d \
        --without-xim \
        --without-xdbe \
        --without-dbus \
        --without-gsettings \
        --without-selinux \
		--with-pgtk \
		--with-cairo \
		--with-modules \
		--with-native-compilation \
        --with-x-tookit=gtk3 \
		--enable-link-time-optimization \

make
make install
